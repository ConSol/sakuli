<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>${sakuli.zipped.release.prefix}${project.version}</id>
    <formats>
        <format>zip</format>
    </formats>

    <fileSets>
        <!-- copy readme -->
        <fileSet>
            <directory>${parent.basedir}/</directory>
            <includes>
                <include>*.txt</include>
                <include>*.md</include>
            </includes>
            <outputDirectory>/</outputDirectory>
        </fileSet>

        <!-- create setup folder -->
        <!-- copy database script to setup folder -->
        <fileSet>
            <directory>${basedir}/src/database_scripts</directory>
            <includes>
                <include>*.sql</include>
            </includes>
            <outputDirectory>/setup/database</outputDirectory>
        </fileSet>
        <!-- copy nagios files to setup folder -->
        <fileSet>
            <directory>${basedir}/src/nagios_scripts</directory>
            <outputDirectory>/setup/nagios</outputDirectory>
        </fileSet>

        <!-- create "bin" folder -->
        <fileSet>
            <directory>${basedir}/src/bin_scripts</directory>
            <outputDirectory>/bin</outputDirectory>
        </fileSet>
        <!-- copy compiled jar -->
        <fileSet>
            <directory>${basedir}/target</directory>
            <includes>
                <include>${project.jar.name}.jar</include>
            </includes>
            <outputDirectory>/bin</outputDirectory>
        </fileSet>
        <!-- copy Context-files to bin/lib/resources -->
        <fileSet>
            <directory>${basedir}/src/main/resources</directory>
            <includes>
                <include>*.xml</include>
            </includes>
            <outputDirectory>/bin/lib/resources</outputDirectory>
        </fileSet>

        <!-- create "_include" folder-->
        <fileSet>
            <directory>${basedir}/src/main/_include</directory>
            <outputDirectory>/_include</outputDirectory>
        </fileSet>

        <!-- copy sample test suites -->
        <fileSet>
            <directory>${project.parent.basedir}/sakuli_test_suites</directory>
            <outputDirectory>/sakuli_test_suites</outputDirectory>
            <excludes>
                <!-- excludes the whole _logs folder -->
                <exclude>*/_logs/**</exclude>
            </excludes>
        </fileSet>
    </fileSets>

    <!-- add dependency jars to "bin/lib" -->
    <dependencySets>
        <dependencySet>
            <outputDirectory>/bin/lib</outputDirectory>
            <useProjectArtifact>true</useProjectArtifact>
            <unpack>false</unpack>
            <scope>runtime</scope>
        </dependencySet>
    </dependencySets>

</assembly>