# Sakuli bash functions

# Browser profile folders can be provisioned before test execution.
# Executed IN THE ROOT of a suite folder either manually (for test creation) or by the startup script. 
sync_browser_profile() {
	# Firefox
        cp -R ./ff_profile_template/* $SAKULI_HOME/../sahi/config/ff_profile_template 2>/dev/null
	echo "Firefox profile template folder synced:"
	ls -la $SAKULI_HOME/../sahi/config/ff_profile_template |  awk '{print $5$6,$7,$8,$9}' | column -t 
	# Chromium?
}
