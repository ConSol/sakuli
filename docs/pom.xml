            <plugin>
                <groupId>nl.windgazer</groupId>
                <artifactId>jsdoctk-plugin</artifactId>
                <version>2.3.2</version>
                <executions>
                    <execution>
                        <id>jsdoc</id>
                        <phase>install</phase>
                        <goals>
                            <goal>jsdoc</goal>
                        </goals>
                                           </execution>
                </executions>
                <configuration>
                    <template>jsdoc</template>
                    <!-- Alternatives are not pre-installed for version 2.x-->
                    <directory>${project.basedir}/api_temp</directory>
                    <recurse>1</recurse>
                    <!--<ext>js</ext>-->
                    <!--<allfunctions>true</allfunctions>-->
                    <!--<Allfunctions>false</Allfunctions>-->
                    <privateOption>false</privateOption>
                    <!-- If you're using the maven default setup this alternative is sometimes required
                    to make the plugin work: ${basedir}/src/main/webapp/ -->
                    <!--<srcDir>${basedir}/src/main/webapp</srcDir>-->
                    <!--TODO funktioniert noch nicht, jsdoc muss konfiguriert werden-->
                    <srcDir>${project.parent.basedir}/core/src/main/_include/</srcDir>
                    <exclude><!-- Since jsdoctk 2.3.2 -->
                        <param>regularexpression</param>
                        <!--Multiple param entries allowed-->
                    </exclude>
                </configuration>
            </plugin>
        </plugins>
    </build>

